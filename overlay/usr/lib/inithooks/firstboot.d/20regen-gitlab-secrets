#!/bin/bash -e
# regenerate gitlab secrets

. /etc/default/inithooks

# secret token
TOKEN=$(mcookie)$(mcookie)$(mcookie)$(mcookie)
CONF=/home/git/gitlab/config/initializers/secret_token.rb
sed -i "s|secret_token.*|secret_token = '$TOKEN'|" $CONF

